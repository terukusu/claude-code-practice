        +changePriority(priority)
    }
    
    class Email {
        +String value
        +validate()
        +toString()
    }
    
    class TaskStatus {
        +TaskStatusEnum value
        +TODO()
        +IN_PROGRESS()
        +REVIEW()
        +DONE()
        +canTransitionTo(status)
    }
    
    class Priority {
        +PriorityEnum value
        +LOW()
        +MEDIUM()
        +HIGH()
        +URGENT()
    }
    
